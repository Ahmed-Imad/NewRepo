@model AppWareHouse.Models.Product

               
@{
    ViewData["Title"] = "Create";
}

<h1>Add Product</h1>
<form method="post" asp-action="Create">
<table class="table table-bordered">
    <tr>
        <td><label asp-for="ProductName"></label></td>
        <td><input asp-for="ProductName" class="form-control"/></td>
    </tr><tr>
        <td><label asp-for="Price"></label></td>
        <td><input asp-for="Price" class="form-control"/></td>
    </tr><tr>
        <td><label asp-for="Qty"></label></td>
        <td><input asp-for="Qty" class="form-control"/></td>
    </tr><tr>
        <td><label asp-for="BarCode"></label></td>
        <td><input asp-for="BarCode" class="form-control"/></td>
    </tr><tr>
        <td><label asp-for="CreationDate"></label></td>
        <td><input asp-for="CreationDate" class="form-control"/></td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="Save" class="btn btn-outline-success"/>
        </td>
    </tr>
</table>
</form>