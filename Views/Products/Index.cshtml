@model IEnumerable<AppWareHouse.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

    <a asp-action="Create"
    asp-controller="Products"
    class="btn btn-outline-success"> 
    Add New Product
</a>
<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(m => m.ProductName)</th>
        <th>@Html.DisplayNameFor(m => m.Price)</th>
        <th>@Html.DisplayNameFor(m => m.Category.CategoryName)</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Price</td>
            <td>@item.Category.CategoryName</td>
            
            <td>
                    <a asp-action="Edit"
                       asp-controller="Products"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-warning">Edit</a>
                    
                    <a asp-action="Details"
                       asp-controller="Products"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-success">Details</a>

                    <a asp-action="Delete"
                       asp-controller="Products"
                       asp-route-id="@item.Id"
                       class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
</table>

